<?xml version="1.0" encoding="utf-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:jr="http://openrosa.org/javarosa"
    xmlns:oc="http://openclinica.org/xforms"
    xmlns:orx="http://openrosa.org/xforms"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>dynamic-repeat-count</h:title>
        <model>
            <instance>
                <dynamic-repeat-count id="dynamic-repeat-count">
                    <count>2</count>
                    <rep_count/>
                    <rep jr:template="">
                        <txt/>
                        <num>5</num>
                        <is-num-relevant>yes</is-num-relevant>
                    </rep>
                    <is-repeat-relevant>yes</is-repeat-relevant>
                    <sum_note/>
                    <txtsum_note/>
                    <numsum_note/>
                    <meta>
                        <instanceID/>
                    </meta>
                </dynamic-repeat-count>
            </instance>
            <bind nodeset="/dynamic-repeat-count/rep" relevant="/dynamic-repeat-count/is-repeat-relevant = 'yes'"/>
            <bind nodeset="/dynamic-repeat-count/count" type="int"/>
            <bind calculate="/dynamic-repeat-count/rep/is-num-relevant" type="string"/>
            <bind calculate=" /dynamic-repeat-count/count " nodeset="/dynamic-repeat-count/rep_count" readonly="true()" type="string"/>
            <bind nodeset="/dynamic-repeat-count/is-repeat-relevant" type="string"/>
            <bind nodeset="/dynamic-repeat-count/rep/txt" type="string"/>
            <bind nodeset="/dynamic-repeat-count/rep/num" type="int" relevant="/dynamic-repeat-count/rep/is-num-relevant = 'yes'"/>
            <bind calculate="count( /dynamic-repeat-count/rep )" nodeset="/dynamic-repeat-count/sum_note" readonly="true()" type="string"/>
            <bind calculate="count( /dynamic-repeat-count/rep/txt )" nodeset="/dynamic-repeat-count/txtsum_note" readonly="true()" type="string"/>
            <bind calculate="count-non-empty( /dynamic-repeat-count/rep/num )" nodeset="/dynamic-repeat-count/numsum_note" readonly="true()" type="string"/>
            <bind calculate="concat('uuid:', uuid())" nodeset="/dynamic-repeat-count/meta/instanceID" readonly="true()" type="string"/>
        </model>
    </h:head>
    <h:body>
        <input ref="/dynamic-repeat-count/count">
            <label>How many repeats?</label>
        </input>
        <group ref="/dynamic-repeat-count/rep">
            <label>Repeat with count</label>
            <repeat jr:count=" /dynamic-repeat-count/rep_count " nodeset="/dynamic-repeat-count/rep">
                <input ref="/dynamic-repeat-count/rep/txt">
                    <label>Enter text</label>
                </input>
                <input ref="/dynamic-repeat-count/rep/num">
                    <label>Enter number</label>
                </input>
                <select1 ref="/dynamic-repeat-count/rep/is-num-relevant">
                    <label>Is number relevant?</label>
                    <item>
                        <value>yes</value>
                        <label>Yes</label>
                    </item>
                    <item>
                        <value>no</value>
                        <label>No</label>
                    </item>
                </select1>
            </repeat>
        </group>
        <select1 ref="/dynamic-repeat-count/is-repeat-relevant">
            <label>Is repeat relevant?</label>
            <item>
                <value>yes</value>
                <label>Yes</label>
            </item>
            <item>
                <value>no</value>
                <label>No</label>
            </item>
        </select1>
        <input ref="/dynamic-repeat-count/sum_note">
            <label>Count of repeats present</label>
        </input>
        <input ref="/dynamic-repeat-count/txtsum_note">
            <label>Count text inputs present</label>
        </input>
        <input ref="/dynamic-repeat-count/numsum_note">
            <label>Count of number inputs filled</label>
        </input>
    </h:body>
</h:html>
